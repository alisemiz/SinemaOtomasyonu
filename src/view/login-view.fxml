<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoginController"
      alignment="CENTER" spacing="15.0" prefWidth="350.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Sinema Otomasyon Sistemi" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <Label text="Lütfen Giriş Yapın"/>

    <VBox spacing="5.0">
        <Label text="Kullanıcı Adı:"/>
        <TextField fx:id="txtUsername" promptText="admin veya user"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Şifre:"/>
        <PasswordField fx:id="txtPassword" promptText="admin veya user"/>
    </VBox>

    <Button fx:id="btnLogin" text="Giriş Yap" onAction="#handleLogin"
            defaultButton="true" prefWidth="Infinity"
            style="-fx-font-size: 16px;"/>

    <Label fx:id="lblStatus" text="" textFill="red"/> </VBox>