<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.SalonYonetimController"
      spacing="15.0" prefHeight="450.0" prefWidth="500.0"> <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
</padding>

    <Label fx:id="lblFormBaslik" text="Yeni Salon Ekle" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Salon Adı:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtSalonAd" promptText="Örn: Salon 1" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Kapasite:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtKapasite" promptText="Örn: 100" maxWidth="100.0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <Button fx:id="btnKaydetGuncelle" text="Salonu Kaydet" onAction="#handleKaydetGuncelle"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

            <Button fx:id="btnFormuTemizle" text="Formu Temizle (İptal)" onAction="#handleFormuTemizle"
                    style="-fx-background-color: #f0ad4e; -fx-text-fill: white;"/>
        </HBox>

        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        </rowConstraints>
    </GridPane>

    <Label text="Mevcut Salonlar" style="-fx-font-size: 18px; -fx-font-weight: bold; margin-top: 20px;"/>

    <TableView fx:id="salonTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colSalonAd" prefWidth="250.0" text="Salon Adı"/>
            <TableColumn fx:id="colKapasite" prefWidth="150.0" text="Kapasite"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button fx:id="btnSalonDuzenle" text="Seçili Salonu Düzenle" onAction="#handleSalonDuzenle"
                style="-fx-background-color: #007BFF; -fx-text-fill: white;"/>

        <Button fx:id="btnSalonSil" text="Seçili Salonu Sil" onAction="#handleSalonSil"
                style="-fx-text-fill: red;"/>
    </HBox>
</VBox>